---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  bookImage?: string;
  ctaText?: string;
  ctaLink?: string;
  synopsisText?: string;
}

const {
  title = "INFINITY: And the Empire of His Dreams",
  subtitle = "Written by Light Tracey",
  backgroundImage = "/uploads/hero-bg-nebula.jpg",
  bookImage = "/uploads/book-mockup-blank.png",
  ctaText = "Buy Now",
  ctaLink = "/#",
  synopsisText="Set on a distant world, an orphan boy turned soldier struggles to cope with reality after losing his family and best friend in a tragic storm.",
} = Astro.props;
---

<section
  class="relative min-h-[70vh] flex items-center bg-cover pt-30"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 20%;`}
>

  <div class="container">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      <p class="text-xl md:text-2xl mb-8">{synopsisText}</p>
      
      <div class="flex flex-wrap gap-4">
        <Button href={ctaLink} variant="primary" size="lg">
          {ctaText}
        </Button>
      </div>
    </div>
  </div>
</section>